<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="thevoid.iam.revoluttestapp.ExtensionsKt" />

        <variable
            name="nominal"
            type="android.databinding.ObservableFloat" />

        <variable
            name="rate"
            type="thevoid.iam.revoluttestapp.data.model.CurrencyRate" />

        <variable
            name="relay"
            type="com.jakewharton.rxrelay2.BehaviorRelay&lt;Float&gt;" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            style="@style/avatar"
            android:id="@+id/image"
            android:layout_margin="16dp"
            app:flag="@{rate.code}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            style="@style/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@{rate.code}"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="EUR" />

        <TextView
            style="@style/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@{ExtensionsKt.fullname(rate.code)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/image"
            tools:text="Euro" />

        <thevoid.iam.revoluttestapp.widget.TextField
            style="@style/text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:enabled="true"
            android:gravity="end"
            android:hint="0"
            android:inputType="numberDecimal"
            android:minWidth="32dp"
            android:focusableInTouchMode="true"
            app:floatValue="@{rate.rate * nominal}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:onChange="@{relay}"
            app:precision="@{2}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image" />

    </android.support.constraint.ConstraintLayout>
</layout>